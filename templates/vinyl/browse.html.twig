{% extends "base.html.twig" %}

{% block title %} {{ title }} | {{ parent() }} {% endblock %}

{% block body %}

<div class="lg:flex lg:items-center lg:justify-between">
    <div class="min-w-0 flex-1">
        <h2 class="p-4 text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">{{title}}</h2>
    </div>
</div>


<!-- Component Start -->
<div class="grid grid-cols-4 md:grid-cols-4 gap-4 justify-evenly">
    {% for genre in genres %}
    <a href="{{path('app_browse_genre', { 'id': genre.id, 'genre': genre.name|replace({"/": " "}) })}}">
        <div class="w-64 bg-white shadow-2xl rounded-2xl shadow-lg hover:bg-sky-100 hover:shadow-2xl cursor-pointer">
            <img class="max-w-lg h-auto rounded-lg" src="{{genre.icons.0.url}}" alt="{{genre.name|title}}">
            <h4 class="block text-xl font-semibold p-4 text-center">{{genre.name|title}}</h4>
        </div>
    </a>
    {% endfor %}
</div>
<!-- Component End  -->


{% endblock %}